---
import Js from "../icons/Technologies/Languages/Js.astro";
import React from "../icons/Technologies/frameworks/React.astro";
import Social_icons from "./Social_icons.astro";
import Github from "../icons/Social/Github.astro";
import Java from "../icons/Technologies/Languages/Java.astro";
import Spring from "../icons/Technologies/frameworks/Spring.astro";
import Ts from "../icons/Technologies/Languages/Ts.astro";
import Mysql from "../icons/Technologies/Databases/Mysql.astro";
import Firebase from "../icons/Technologies/Databases/Firebase.astro";

const TAGS = {
  Java: {
    name: "Java",
    class: "text-white",
    icon: Java,
  },
  Ts: {
    name: "TypeScript",
    class: "text-white",
    icon: Ts,
  },
  Spring: {
    name: "Spring Boot",
    class: "text-white",
    icon: Spring,
  },
  Js: {
    name: "Js",
    class: "text-white",
    icon: Js,
  },
  React: {
    name: "React Native",
    class: "text-white",
    icon: React,
  },
    Mysql: {
    name: "Mysql",
    class: "text-white",
    icon: Mysql,
  },
    Firebase: {
    name: "Firebase",
    class: "text-white",
    icon: Firebase,
  },
};

const PROJECTS = [
  {
    title: "Interestelar (Internal Project â€“ MagmaLabs)",
    description: "Mobile application built with React Native and Expo that integrates the Loyverse API for product and sales management. Developed with TypeScript and Firebase (Phone Authentication), the app provides a seamless and secure user experience for managing business operations.",
    link: "#",
    github: "",
    image: "/projects/interestelar.png",
    tags: [ TAGS.Ts, TAGS.React, TAGS.Firebase],
  },
    {
    title: "Finance Tracker - Mobile Application",
    description: "Mobile application built with React Native and Expo, designed to help you manage your money efficiently. It uses MySql as the database and JWT-based authentication to ensure secure access, allowing users to securely record income and expenses, visualize statistics, and set budgets to improve financial control.",
    link: "#",
    github: "https://github.com/beatrizheav/FinanceTracker",
    image: "/projects/financetracker.png",
    tags: [ TAGS.Ts, TAGS.React, TAGS.Mysql],
  },
  {
    title: "ForoHub - API REST",
    description: "REST API developed with Spring Boot that enables the creation and management of users and topics. Through JWT authentication, users can interact with the forum by performing operations such as creating, updating, and deleting topics, as well as retrieving specific information.",
    link: "#",
    github: "https://github.com/Diana-Camz/Challenge4-ONE-ForoHub",
    image: "/projects/forohub.webp",
    tags: [ TAGS.Java, TAGS.Spring, TAGS.Mysql],
  },
];
---

<div class="flex flex-col gap-y-16">
  {PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col md:flex-row md:space-x-8 space-y-8 md:space-y-0">
      <div class="w-full md:w-1/2 flex items-center group justify-center">
        <div class="relative flex flex-col items-center transition duration-500 ease-in-out transform shadow-xl overflow-hidden rounded-xl sm:rounded-xl lg:border lg:border-gray-800 group-hover:shadow-2xl">
          <img alt="Project Preview" class="object-cover object-top w-full h-full transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
        </div>
      </div>

      <div class="w-full md:w-1/2 flex flex-col justify-center">
        <h3 class="text-2xl font-bold mb-2 ">{title}</h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li = {tag.name}>
                <span class={`flex gap-x-2 rounded-full border border-white/10 text-xs ${tag.class} py-1 px-2`}>
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
        </div>

        <div class="mt-2 text-lg mb-4]">{description}</div>

        <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <Social_icons href={github}>
              <Github class="size-6" />
              Code
            </Social_icons>
          )}
        </footer>
      </div>
    </article>
  ))}
</div>
