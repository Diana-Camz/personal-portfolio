---
import Tech_icons from "./Tech_icons.astro";
import Html from '../icons/Technologies/Languages/Html.astro'
import Css from '../icons/Technologies/Languages/Css.astro';
import Ts from '../icons/Technologies/Languages/Ts.astro';
import Js from '../icons/Technologies/Languages/Js.astro';
import Java from '../icons/Technologies/Languages/Java.astro';
import Ast from '../icons/Technologies/frameworks/Ast.astro';
import Spring from '../icons/Technologies/frameworks/Spring.astro';
import Express from '../icons/Technologies/frameworks/Express.astro';
import Node from '../icons/Technologies/frameworks/Node.astro';
import React from '../icons/Technologies/frameworks/React.astro';
import Expo from '../icons/Technologies/frameworks/Expo.astro';
import Mysql from '../icons/Technologies/Databases/Mysql.astro';
import Firebase from "../icons/Technologies/Databases/Firebase.astro";
import Figma from '../icons/Technologies/Tools/Figma.astro';
import Git from '../icons/Technologies/Tools/Git.astro';
import Postman from '../icons/Technologies/Tools/Postman.astro';
import Netlify from '../icons/Technologies/Tools/Netlify.astro';
import Github from '../icons/Technologies/Tools/Github.astro';
import Ubuntu from '../icons/Technologies/Tools/Ubuntu.astro';
import Tecno_icon from '../icons/Titulos/Tech_icon.astro';
---

<div class="flex flex-col items-center">
  <h2 class="text-4xl font-semibold pb-10 flex gap-x-3 items-center text-center mb-4">
    <Tecno_icon class="w-12 h-12" /> Technologies
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 p-4">
    <div>
      <h2 class="text-2xl opacity-80 mb-6 text-center">Languages</h2>
      <nav class="flex flex-wrap justify-center gap-4">
        <Tech_icons title="JavaScript"><Js class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Typescript"><Ts class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Java"><Java class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="HTML"><Html class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="CSS"><Css class="w-12 h-12" /></Tech_icons>
      </nav>
      <h2 class="text-2xl opacity-80 mt-8 mb-6 text-center">Frameworks & Libraries</h2>
      <nav class="flex flex-wrap justify-center gap-4">
        <Tech_icons title="React Native"><React class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Expo"><Expo class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Astro"><Ast class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Spring Boot"><Spring class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Express"><Express class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Node.js"><Node class="w-12 h-12" /></Tech_icons>
      </nav>
    </div>
    
    <div>
      <h2 class="text-2xl opacity-80 mb-6 text-center">Databases</h2>
      <nav class="flex flex-wrap justify-center gap-4">
        <Tech_icons title="Firebase"><Firebase class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="MySQL"><Mysql class="w-12 h-12" /></Tech_icons>
      </nav>
      <h2 class="text-2xl opacity-80 mt-8 mb-6 text-center">Tools & Platforms</h2>
      <nav class="flex flex-wrap justify-center gap-4">
        <Tech_icons title="Figma"><Figma class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Git"><Git class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Github"><Github class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Postman"><Postman class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Netlify"><Netlify class="w-12 h-12" /></Tech_icons>
        <Tech_icons title="Ubuntu"><Ubuntu class="w-12 h-12" /></Tech_icons>
      </nav>
    </div>
  </div>
</div>
